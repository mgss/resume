{
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": 2,
        "camelcase": 2,
        "curly": 2,
        "brace-style": [2, "1tbs"],
        "quotes": [2, "single"],
        "semi": [0, "always"],
        "space-in-brackets": [4, "never"],
        "space-infix-ops": 2,
        "no-unused-vars": [2, {"vars": "local", "args": "after-used"}]
    }
}